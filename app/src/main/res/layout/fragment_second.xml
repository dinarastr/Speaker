<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".second.SecondFragment">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/topic_tv"
        android:gravity="center"
        android:padding="@dimen/small_padding"
        android:textAppearance="@style/PhraseRusStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Семья" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/phrases_rv"
        android:padding="@dimen/small_padding"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        tools:listitem="@layout/phrase_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topic_tv"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>